<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developer.mechanicrooms">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/mcroomlogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/mcroomround"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.developer.mechanicrooms.UpdateMobileOtpActivity"></activity>
        <activity android:name="com.developer.mechanicrooms.UpdateMobile" />
        <activity android:name="com.developer.mechanicrooms.ContactUs" />
        <activity android:name="com.developer.mechanicrooms.PrivacyPolicy" />
        <activity android:name="com.developer.mechanicrooms.AboutUsActivity" />
        <activity android:name="com.developer.mechanicrooms.RateReviewsActivity" />
        <activity
            android:name="com.developer.mechanicrooms.Userinfo"
            android:parentActivityName="com.developer.mechanicrooms.Mainlastscreen" />
        <activity
            android:name="com.developer.mechanicrooms.His.History"
            android:label="History" />
        <activity android:name="com.developer.mechanicrooms.Slotbook" />
        <activity android:name="com.developer.mechanicrooms.Bookservice" />
        <activity android:name="com.developer.mechanicrooms.Garaagedetails" />
        <activity
            android:name="com.developer.mechanicrooms.Mainlastscreen"
            android:theme="@style/Theme.Design.NoActionBar" /> <!-- <activity android:name=".delete.MainActivity" /> -->
        <activity
            android:name="com.developer.mechanicrooms.Deleete"
            android:label="@string/title_activity_deleete" />
        <activity android:name="com.developer.mechanicrooms.Mainscreen" />
        <activity android:name="com.developer.mechanicrooms.Mainpage" />
        <activity android:name="com.developer.mechanicrooms.Addlocation" />
        <activity android:name="com.developer.mechanicrooms.RegProfileActivity" />
        <activity android:name="com.developer.mechanicrooms.Otp" />
        <activity android:name="com.developer.mechanicrooms.RegPageActivity" />
        <activity android:name="com.developer.mechanicrooms.Splashscreen.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    android:background="@drawable/pincode_card"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/pincode_close_btn"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:elevation="8sp"
        android:background="@drawable/close_btn_bg"
        app:srcCompat="@drawable/ic_baseline_close_24"
        android:padding="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/txt_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10sp"
        android:fontFamily="serif"
        android:text="Search Garage"
       android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/grey_800"
        android:textSize="25dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_areacode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/txt_dialog"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_border_edittext"
        android:drawablePadding="5dp"
        android:inputType="number"
        android:maxLength="6"
        android:fontFamily="@font/semibold"
        android:hint="Enter Area Pincode"
        android:paddingStart="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/color_latest"
        android:textSize="15dp" />



        <Button
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="15sp"
            android:id="@+id/btn_search"
            android:layout_below="@id/edt_areacode"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/circle_button"
            android:clickable="true"
            android:fontFamily="serif"
            android:text="Search"
            android:textColor="@color/white"
            android:textStyle="bold" />



</RelativeLayout>
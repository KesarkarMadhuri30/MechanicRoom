<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:background="@drawable/card_bg"
    android:layout_marginRight="8sp"
    android:layout_marginLeft="8sp">
    <RelativeLayout
        android:id="@+id/container_timeline_indicator"
        android:layout_width="30dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_timeline_indicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_baseline_stars_yellow"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_timeline_indicator_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#ffeb3b"
            android:layout_marginTop="5dp"
            android:layout_below="@id/iv_timeline_indicator"/>

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="1dp">
            <TextView
                android:id="@+id/txt_book_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignParentLeft="true"
                android:text=""
                android:padding="5dp"
                android:fontFamily="@font/bitter"
                android:textColor="@color/colorAccent"
                android:ellipsize="end"
                android:maxEms="17"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/txt_payment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bitter"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_cardbg"
                android:padding="5dp"
                android:text="Pending"
                android:textColor="@color/white"
                android:textSize="16sp" />
            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5sp"
                    android:padding="1dp">


                    <TextView
                        android:id="@+id/txt_grg_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bitter"
                        android:padding="1dp"
                        android:text=""

                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txt_bike_dtl"
                        android:layout_below="@id/txt_grg_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bitter"
                        android:padding="1dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_servtype"
                        android:layout_below="@id/txt_bike_dtl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text=""
                        android:padding="1dp"
                        android:fontFamily="@font/bitter"
                        android:textColor="@color/black_light"
                        android:ellipsize="end"
                        android:maxEms="17"
                        android:maxLines="1"/>
                    <TextView
                        android:id="@+id/txt_req"
                        android:layout_below="@id/txt_servtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text=""
                        android:padding="1dp"
                        android:fontFamily="@font/bitter"
                        android:textColor="@color/black_light"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/txt_Payment_amt"
                        android:layout_below="@id/txt_req"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bitter"
                        android:padding="1dp"
                        android:text=""
                        android:textColor="#5d5d5d"
                        android:textSize="16sp" />

                </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:padding="1dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/btn_pay"
                    android:text=""
                    android:textColor="#5d5d5d"
                    android:textSize="14sp" />
            <Button
                android:id="@+id/btn_pay"
                android:layout_width="90sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_margin="5sp"
                android:text="Pay"
                android:visibility="gone"
               android:layout_gravity="end"
                android:textSize="16sp"
                android:fontFamily="@font/bitter"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:background="@color/orange"
                />
            </RelativeLayout>
            </LinearLayout>

</LinearLayout>





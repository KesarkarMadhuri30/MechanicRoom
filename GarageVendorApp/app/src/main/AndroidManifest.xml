        <activity android:name="com.developer.mechanicroomvendor.StartPages.RegisterActivity" />
        <activity android:name="com.developer.mechanicroomvendor.StartPages.LoginActivity" />
        <activity android:name="com.developer.mechanicroomvendor.StartPages.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>
        <activity android:name="com.developer.mechanicroomvendor.AccountInfo.OwnerInfo" />
        <activity android:name="com.developer.mechanicroomvendor.AccountInfo.GarageInfoActivity" />
        <activity android:name="com.developer.mechanicroomvendor.StartPages.RegProfile" />
        <activity android:name="com.developer.mechanicroomvendor.StartPages.Otp" />

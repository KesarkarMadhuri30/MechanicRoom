<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbacklow"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_below="@+id/top_lyt"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="15sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Add Business KYC"
                android:fontFamily="serif"
                android:textStyle="bold"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:background="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Shop act license Image and PDF"
                android:fontFamily="serif"
                android:textStyle="bold"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/shop_lisence_close_btn"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:visibility="gone"
                    android:background="@drawable/close_btn_bg"
                    android:src="@drawable/ic_baseline_close_24"
                    android:padding="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="10sp"
                    android:layout_alignParentRight="true"
                    />
            <RelativeLayout
                android:id="@+id/shopatlisence_lyt"
                android:layout_toLeftOf="@id/shop_lisence_close_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/edt_bg"
                android:orientation="horizontal">
              <!--  <TextView
                    android:id="@+id/txt_shop_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Click here"
                    android:layout_centerInParent="true"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/shop_lisence_image"
                    android:layout_width="200sp"
                    android:layout_height="130sp"
                    android:scaleType="fitXY"
                   android:layout_centerInParent="true"
                    />-->
                <TextView
                    android:id="@+id/txt_shop_act"
                    android:layout_toLeftOf="@+id/shop_act_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginRight="10sp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/bitter"
                    android:hint="Upload Image  "
                    android:textStyle="normal"
                    android:inputType="text"
                    android:paddingLeft="10sp" />

                <Button
                    android:id="@+id/shop_act_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5sp"
                    android:fontFamily="serif"
                    android:text="Browse"
                    />
            </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp">
            <ImageView
                android:id="@+id/shopact_pdf_close_btn"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:visibility="gone"
                android:background="@drawable/close_btn_bg"
                android:src="@drawable/ic_baseline_close_24"
                android:padding="5sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:layout_alignParentRight="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_toLeftOf="@id/shopact_pdf_close_btn"
                android:background="@drawable/edt_bg"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_shopact_pdf"
                    android:layout_toLeftOf="@+id/pdf_browse_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_marginRight="10sp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/bitter"
                    android:hint="Upload Pdf  "
                    android:textStyle="normal"
                    android:inputType="text"
                    android:paddingLeft="10sp" />

                <Button
                    android:id="@+id/pdf_browse_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5sp"
                    android:fontFamily="serif"
                    android:text="Browse"
                    />
            </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Shop Image"
                android:fontFamily="serif"
                android:textStyle="bold"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:background="@drawable/image_bg"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/shop_photo_close_btn"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:visibility="gone"
                    android:background="@drawable/close_btn_bg"
                    android:src="@drawable/ic_baseline_close_24"
                    android:padding="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_alignParentRight="true"
                    />
                <RelativeLayout
                    android:id="@+id/shop_photo_lyt"
                    android:layout_width="200sp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="15sp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="Click here"
                        android:layout_centerInParent="true"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:id="@+id/shop_image"
                        android:layout_width="200sp"
                        android:layout_height="150sp"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="GST No."
                android:fontFamily="serif"
                android:textStyle="bold"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_gst_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:inputType="text"
                android:maxLength="15"
                android:hint="Enter GST number"
                android:textColor="@color/black"
                android:textColorHint="@color/color_latest"
                android:textSize="16dp"
                app:backgroundTint="@color/blue" />

            <Button
                android:id="@+id/btn_bussiness_upload"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/circle_button"
                android:text="SUBMIT"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
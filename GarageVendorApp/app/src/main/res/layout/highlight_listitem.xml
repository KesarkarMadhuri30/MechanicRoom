<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/highlight_close_btn"
        android:layout_width="30sp"
        android:layout_height="30sp"
      android:elevation="8sp"
        android:background="@drawable/close_btn_bg"
        android:src="@drawable/ic_baseline_close_24"
        android:padding="5sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:layout_alignParentRight="true"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cat_cardview"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="8sp"
        android:layout_marginLeft="8sp"
      >

        <ImageView
            android:id="@+id/highlight_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/mcroomlogo"
            android:padding="0dp"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txt_highlight_name"
        android:layout_below="@id/cat_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5sp"
        android:fontFamily="@font/semibold"
        android:hint="music"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:marqueeRepeatLimit="marquee_forever"

        android:gravity="center"
        android:text=""
        android:textColorHint="@color/black"
        android:textColor="@color/black_light"
        android:textSize="15sp"
        />
</RelativeLayout>
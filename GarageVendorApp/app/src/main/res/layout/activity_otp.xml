<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbacklow"
    >


    <RelativeLayout
        android:id="@+id/imagevre"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/mainbacklow"
        >


        <ImageView
            android:id="@+id/imagev"
            android:layout_width="233dp"
            android:layout_height="236dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="82dp"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="81dp"
            android:layout_marginRight="79dp"
            android:src="@drawable/mcroomlogo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imagevre"
        android:background="@color/white"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/bold"
            android:gravity="center"

            android:text="Enter OTP Here"
            android:textColor="@color/orange"
            android:textSize="23dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/opt_edt"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/blue"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/semibold"
                android:textColor="@color/blue"
                android:inputType="number"
                android:maxLength="4"
                android:maxEms="10"
                android:layout_marginRight="10dp"
                android:hint="Enter OTP"
                android:lineHeight="5dp"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/resend_opt_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:text="Resent otp"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/circle_button"
            android:fontFamily="@font/semibold"
            android:text="Log in"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>

</LinearLayout>
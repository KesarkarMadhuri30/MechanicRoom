<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/mainbacklow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10sp"
            android:gravity="center"
            android:background="@drawable/border2"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="0.50"
                    android:fontFamily="@font/semibold"
                    android:gravity="start"
                    android:paddingLeft="0sp"
                    android:text="Garage Location"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:background="@color/black"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:inputType="textMultiLine"
                    android:text=""
                    android:hint="Enter Address"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_latest"
                    android:textSize="16dp"
                    app:backgroundTint="@color/blue"
                    android:textStyle="normal" />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:inputType="textMultiLine"
                    android:text=""
                    android:hint="Enter Area"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_latest"
                    android:textSize="16dp"
                    app:backgroundTint="@color/blue"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:inputType="textMultiLine"
                    android:text=""
                    android:maxLength="6"
                    android:hint="Enter Zipcode"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_latest"
                    android:textSize="16dp"
                    app:backgroundTint="@color/blue"
                    android:textStyle="normal" />
                <RelativeLayout
                    android:id="@+id/city_lyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="19dp"
                    android:background="@drawable/rounded_border"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/city_spinner"
                        style="@style/slotspinner"
                        android:layout_width="match_parent"
                        android:layout_height="35sp"
                        android:layout_margin="5sp"
                        android:ellipsize="end"
                        android:textColorHint="@color/black"
                        />
                </RelativeLayout>
              <!--  <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:maxLength="6"
                    android:inputType="text"
                    android:text=""
                    android:hint="Enter City"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_latest"
                    android:textSize="16dp"
                    app:backgroundTint="@color/blue"
                    android:textStyle="normal" />-->

               <!-- <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:inputType="textMultiLine"
                    android:text=""
                    android:hint="Enter State"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_latest"
                    android:textSize="16dp"
                    app:backgroundTint="@color/blue"
                    android:textStyle="normal" />-->




                <Button
                    android:id="@+id/loc_submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25sp"
                    android:layout_marginRight="25sp"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/circle_button"
                    android:text="SUBMIT"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
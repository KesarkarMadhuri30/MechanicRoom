<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbacklow"
    >
    <LinearLayout
        android:id="@+id/appbarlyt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Contact Us"
            android:fontFamily="@font/semibold"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="0dp"
            android:gravity="start"
            android:layout_gravity="center"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbarlyt"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:gravity="start"
                android:layout_marginBottom="0sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="50sp"
                android:text="Contact number:"
                android:textColor="@color/fent_blue"
                android:padding="5sp"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:text="+91 7798983838"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:gravity="start"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="0sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="50sp"
                android:text="Email Us:"
                android:textColor="@color/fent_blue"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="serif"
                android:text="contactus@mechanicrooms.com"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:gravity="start"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="0sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="50sp"
                android:text="Social:"
                android:textColor="@color/fent_blue"
                android:padding="5sp"
                android:textSize="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                >
                <ImageView
                    android:id="@+id/twitter_img"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/twi"
                    />

                <ImageView
                    android:id="@+id/insta_img"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/instagram"
                    />
                <ImageView
                    android:id="@+id/contact_img"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/fb"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:gravity="start"
                android:layout_marginTop="8sp"
                android:layout_marginBottom="0sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="50sp"
                android:text="Address:"
                android:textColor="@color/fent_blue"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50sp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bitter"
                android:text="Pune-MH-India"

                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
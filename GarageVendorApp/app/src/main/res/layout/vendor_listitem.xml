    <androidx.cardview.widget.CardView
        android:id="@+id/cat_cardview"
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="5sp"
        android:layout_marginBottom="5sp"
        >


        <ImageView
            android:id="@+id/resimage"
            style="@style/garageImagestyle"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:scaleType="fitXY"
            android:src="@drawable/mcroomlogo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:elevation="5sp"
            android:background="@drawable/we_rounded_corners_background"
            />
        <RatingBar
            android:id="@+id/ratingbar"
            android:elevation="10dp"
            android:layout_gravity="end"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:progressTint="@color/colorPrimary"
            android:progressBackgroundTint="@color/white"

            android:layout_marginTop="10dp"
            android:saveEnabled="true"
            android:numStars="5"/>

        <RelativeLayout
            android:id="@+id/middle_lyt"
            android:elevation="10dp"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameofvendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingLeft="2dp"
                android:fontFamily="@font/bitter_bold"
                android:hint="Balaji Motor service "
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                android:ellipsize="end"
                android:lines="1"
                />
            <TextView
                android:id="@+id/location"
                android:layout_below="@id/nameofvendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:fontFamily="@font/arya"
                android:text="kharadi,pune"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                android:textStyle="normal" />

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cp_border"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/category_lyt"
    android:layout_marginTop="10sp"
    android:layout_marginRight="8sp"
    android:layout_marginLeft="8sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lin_apoint"
        android:padding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cp_apoint_book_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignParentLeft="true"
                android:text=""
                android:padding="5dp"
                android:fontFamily="@font/bitter"
                android:textColor="@color/colorAccent"
                android:ellipsize="end"
                android:maxEms="17"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/cp_apoint_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:text=""
                android:padding="5dp"
                android:fontFamily="@font/bitter"
                android:textColor="@color/fent_blue"
                android:ellipsize="end"
                android:maxEms="17"
                android:maxLines="1"/>
        </RelativeLayout>
        <!--<TextView
            android:id="@+id/apoint_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="16dp"
            android:text="Time : 2.00"
            android:padding="5dp"
            android:fontFamily="@font/bitter"
            android:textColor="@color/grey_600"
            android:ellipsize="end"
            android:maxEms="17"
            android:maxLines="1"/>-->
        <TextView
            android:id="@+id/cp_txtv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text=""
            android:padding="1dp"
            android:layout_marginLeft="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/bitter"
            android:textColor="@color/color_latest"
            android:ellipsize="end"

            android:maxLines="2"/>
        <TextView
            android:id="@+id/cp_txtv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/bitter"
            android:maxLines="2"
            android:padding="1dp"
            android:text=""
            android:textColor="@color/color_latest"
            android:textSize="15dp"
            android:layout_marginLeft="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/cp_apoint_vtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text=""
            android:padding="1dp"
            android:layout_marginLeft="15sp"
            android:fontFamily="@font/bitter"
            android:textColor="@color/black_light"
            android:ellipsize="end"
            android:maxEms="17"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/cp_apoint_servtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="15sp"
            android:text=""
            android:padding="1dp"
            android:fontFamily="@font/bitter"
            android:textColor="@color/black_light"
            android:ellipsize="end"
            android:maxEms="17"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/cp_apoint_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text=""
            android:padding="1dp"
            android:layout_marginLeft="15sp"
            android:fontFamily="@font/bitter"
            android:textColor="@color/black_light"
            android:ellipsize="end"

            android:maxLines="1"/>
        <TextView
            android:id="@+id/cp_service_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text=""
            android:padding="1dp"
            android:layout_marginLeft="15sp"
            android:fontFamily="@font/bitter"
            android:textColor="@color/black_light"
            android:ellipsize="end"

            android:maxLines="1"/>
        <TextView
            android:id="@+id/cp_payment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text=""
            android:padding="1dp"
            android:layout_marginLeft="15sp"
            android:fontFamily="@font/bitter"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>

</RelativeLayout>
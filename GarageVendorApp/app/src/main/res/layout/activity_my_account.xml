<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/mainbacklow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_lyt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/Appname"
            android:layout_weight="0.80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="My Account"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:paddingLeft="0dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/top_lyt"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/owner_lyt"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:background="@drawable/card_rect">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="15sp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Owner Info"
                    android:fontFamily="@font/semibold"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/owner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="30sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/garage_lyt"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/garage_card_rect"
                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="15sp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Garage Info"
                    android:fontFamily="@font/semibold"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/garage"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                   android:layout_marginRight="30sp"
                    android:layout_marginBottom="30sp"
                    />

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/op_clo_garage_lyt"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:background="@drawable/time_rect">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="15sp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Time / WeekOff"
                    android:fontFamily="@font/semibold"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/clock"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="30sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/address_lyt"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/address_card_rect"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_margin="15sp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Address"
                    android:fontFamily="@font/semibold"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/address"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="30sp"
                    />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/gallery_lyt"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:background="@drawable/gallery_card_rect">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_margin="15sp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Gallery"
                    android:fontFamily="@font/semibold"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gallery"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="30sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/business_lyt"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/business_card_rect"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_margin="15sp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Business KYC"
                    android:fontFamily="@font/semibold"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/kyc_icon"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="30sp"
                    />
            </RelativeLayout>

        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/merchant_lyt"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="180sp"
                android:background="@drawable/merchant_card_rect">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80sp"
                    android:layout_margin="15sp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Merchant KYC"
                    android:fontFamily="@font/semibold"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/kyc_icon"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30sp"
                    android:layout_marginBottom="30sp"
                    />
            </RelativeLayout>
         </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>